{
  "compilerOptions": {
    "baseUrl": "./src",
    "incremental": true,
    "allowJs": true,
    "checkJs": true,
    "target": "esnext",
    "outDir": "./build",
    "moduleResolution": "node",
    "module": "esnext",
    "declaration": true,
    "inlineSourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "traceResolution": false,
    "listEmittedFiles": false,
    "listFiles": false,
    "pretty": true,
    "noEmit": false,
    "noEmitOnError": true,
    "emitDeclarationOnly": false,
    "declarationMap": true,
    "composite": true,
    "isolatedModules": true,
    "removeComments": false,
    // module resolution
    "esModuleInterop": true,
    // linter checks
    // advanced
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "node"
    ],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**"
  ],
  "compileOnSave": false
}